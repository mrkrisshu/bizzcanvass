# Client-side env vars used at build time for Firebase Hosting deploy
NEXT_PUBLIC_BASE_URL=https://your-firebase-site.web.app

# Firebase (client)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Server-side secrets should be set via Firebase Functions secrets
# e.g. firebase functions:secrets:set GEMINI_API_KEY
# Also set Firebase Admin credentials via functions runtime config or default service account